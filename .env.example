# API Keys
BSCSCAN_API_KEY=your_bscscan_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username_without_@
ETHERSCAN_API_KEY=your_etherscan_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Scraping configuration
SCRAPE_INTERVAL=3600  # in seconds (1 hour)
BSC_DATA_FETCH_INTERVAL=3600  # in seconds (1 hour)

# Database
DATABASE_PATH=data/memecoins.db

# Authentication Key for the update-data endpoint
UPDATE_AUTH_KEY=your_secure_update_auth_key_here

# Admin Chat ID for critical error notifications (optional)
ADMIN_CHAT_ID=your_admin_telegram_chat_id

# AI Configuration
# Local models configuration (optional)
LOCAL_MODELS_DIR=models  # Directory to store local models
LOCAL_EMBEDDING_MODEL=simple-embeddings  # Uses a simple deterministic embedding approach
LOCAL_EMBEDDING_DIMENSION=256  # Dimension of generated embeddings
# LOCAL_CLASSIFICATION_MODEL=keyword-based  # Simple keyword-based classification is used by default

# Cache Configuration
CACHE_MAX_SIZE=10000  # Max items in memory cache
ENABLE_DISK_CACHE=true  # Enable disk cache for persistence
DISK_CACHE_PATH=cache  # Path for disk cache
DISK_CACHE_MAX_FILES=1000  # Max files in disk cache
DISK_CACHE_MAX_SIZE_MB=100  # Max size of disk cache in MB

# Trading Configuration
MIN_MARKET_CAP=60000  # Minimum market cap for trading consideration in USD
MIN_PROFIT_TARGET=10  # Minimum profit target for generating signals in USD
TRADING_SIGNALS_EXPIRY=86400  # Time in seconds before trading signals expire (24 hours)
ENABLE_TRADING_FEATURES=true  # Enable or disable trading features

# Dashboard API Configuration
API_SECRET_KEY=your_secure_api_key_here  # Secret key for dashboard API access
DASHBOARD_URL=http://localhost:3001  # URL of the trading dashboard

# Node Environment
NODE_ENV=production

# Vercel Environment Indicator (set to 1 on Vercel deployment)
VERCEL=1